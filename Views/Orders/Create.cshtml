@model hatshop.Models.Order

@{

}

<!DOCTYPE html>

<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>

<body>
    <div class="mt-5 container">
        <h4>Your order</h4>
        <hr />
        <div class="row">
            <div class="col-md-8">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        @if (User.IsInRole("User"))
                        {
                            @* <input type="hidden" asp-for="UserId" value="@ViewBag.UserId" /> *@
                        }
                        else if (User.IsInRole("Admin"))
                        {
                            <label asp-for="UserId" class="control-label"></label>
                            <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId"></select>
                            <span asp-validation-for="UserId" class="text-danger"></span>
                        }
                    </div>
                    <table class="table cart-table">
                        <caption>Products</caption>
                        <thead class="thead-dark">
                            <tr>
                                <th scope="col">
                                    <span class="ml-5">Image</span>
                                </th>
                                <th scope="col">Name</th>
                                <th scope="col">Price</th>
                                <th scope="col">Quantity</th>
                                <th scope="col">Total</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody class="cart-table-body">
                            @* Products *@
                        </tbody>
                    </table>
                    <div class="form-group">
                        <label asp-for="DateTime" class="control-label"></label>
                        <input asp-for="DateTime" class="form-control" />
                        <span asp-validation-for="DateTime" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</body>

</html>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
<script>
    function createProductTableRow(item) {
        let row = document.createElement('tr');
        row.innerHTML = `
                    <td class="w-25 mh-25"><img src="${item.image}" class="ml-5 rounded-circle" style="width: 25%"></td>
                    <td>${item.name}</td>
                    <td>$${item.price}</td>
                    <td>${item.quantity}</td>
                    <td>$${item.quantity * item.price}</td>
                    <td>
                        <button class="btn btn-danger btn-sm rounded-0 remove-from-cart" type="button" data-hat-id=${item.id}>
                            <i class="fa fa-trash"></i>
                        </button>
                    </td>`;

        $(row).find('button').click(function () {
            $(this).parents('tr').eq(0).remove();
        });

        return row;
    }

    $(document).ready(function () {
        for (let item of orderItems)
            $('.cart-table-body').append(createProductTableRow(item));
        $('.cart-table-body').append(`
        <tr>
            <td><strong>Order total:</strong></td>
            <td></td>
            <td></td>
            <td></td>
            <td class="order-total">$` + orderItems.reduce((acc, item) => acc + item.price * item.quantity, 0) + `</td></tr>`
        );
    });
</script>
}
