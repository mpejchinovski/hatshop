@model hatshop.Models.Order

@{
}

<!DOCTYPE html>

<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
</head>

<body>
    <div class="mt-5 container">
        <div class="col-lg-10">
            <div class="mb-3">
                <h4>Order</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        Date and time:
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.DateTime)
                    </dd>
                </dl>
            </div>
            <table class="table">
                <caption>Products</caption>
                <thead class="thead-dark">
                    <tr>
                        <th>

                        </th>
                        <th>
                            Hat
                        </th>
                        <th>
                            Description
                        </th>
                        <th>
                            Price
                        </th>
                        <th>
                            Quantity
                        </th>
                        <th>
                            Total
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var orderHat in Model.Hats)
                    {
                        <tr>
                            <td class="w-25 mh-25">
                                <img src="~/images/@orderHat.Hat.PicturePath" class="ml-5 rounded-circle"
                                style="width: 25%">
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => orderHat.Hat.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => orderHat.Hat.Description)
                            </td>
                            <td>
                                $@Html.DisplayFor(modelItem => orderHat.Hat.Price)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => orderHat.Quantity)
                            </td>
                            <td>
                                $@(orderHat.Hat.Price * orderHat.Quantity)
                            </td>
                        </tr>
                    }
                    <tr>
                        <td>
                            <h6>Order total:</h6>
                        </td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td>
                            <h6>$@Model.Total</h6>
                        </td>
                    </tr>
                </tbody>
            </table>
            <div>
                <a asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>
</body>

</html>
